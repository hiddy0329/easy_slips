<div class="header_left">
  <div class="app_title">
    Easy Slips
  </div>
</div>
<div class="header_right">
  <% if user_signed_in? %>
    <div class="user_left">
      <%= current_user.name %>
    </div>
    <div class="user_right">
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
    </div> 
  <% else %>
    <div class="user_left">
      <%= link_to 'ログイン', new_user_session_path %>
    </div>
    <div class="user_right">
      <%= link_to '新規登録', new_user_registration_path %>
    </div>
  <% end %>
</div>

