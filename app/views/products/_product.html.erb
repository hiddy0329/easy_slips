<tr class="item">
  <td>
    <%= product.created_at.strftime('%Y/%m/%d') %>
  </td>
  <td>
    <%= product.item_number %>
  </td>
  <td>
    <%= product.name %>
  </td>
  <td>
    <%= product.color %>
  </td>
  <td>
    <%= product.price %>
  </td>
  <td>
    <%= product.note %>
  </td>
  <td>
    <%= link_to "削除", product_path(product.id), method: :delete, class: 'btn btn-danger' %>
  </td>
</tr>