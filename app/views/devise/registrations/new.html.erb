<div class="container">
  <body class="text-center">
    <div class="d-flex">
      <div class="w-25"></div>
      <div class="w-50">
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>

          <%= render "devise/shared/error_messages", resource: resource %>
    
          <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
          </svg>

          <h1 class="h3 mb-3 fw-normal">新規登録してください</h1>
    
          <div class="mb-3">
            <%= f.text_field :name, class:"form-control form-control-lg", placeholder:"会社名・個人事業主名" %>
          </div>
          <div class="mb-3">
            <%= f.email_field :email, class:"form-control form-control-lg", placeholder:"メールアドレス" %>
          </div>
          <div class="mb-3">
            <%= f.password_field :password, autocomplete: "off", class:"form-control form-control-lg", placeholder:"パスワード(半角英数字6文字以上)" %>
          </div>
          <div class="mb-3">
            <%= f.text_field :postal_code, id:"postal_code", maxlength:"8", class:"form-control form-control-lg", placeholder:"郵便番号:例）123-4567"%>
          </div>
          <div class="mb-3">
            <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"form-control form-control-lg", id:"prefecture", placeholder:"都道府県"}) %>
          </div>
          <div class="mb-3">
            <%= f.text_field :city, id:"city", class:"form-control form-control-lg", placeholder:"市区町村:例）新宿区" %>
          </div>
          <div class="mb-3">
            <%= f.text_field :address, id:"address", class:"form-control form-control-lg", placeholder:"番地:例）青山1-1-1" %>
          </div>
          <div class="mb-3">
            <%= f.text_field :building_name, id:"building", class:"form-control form-control-lg", placeholder:"建物名(任意):例) 柳ビル103"%>
          </div>
          <div class="mb-3">
            <%= f.text_field :phone_number, id:"phone_number", maxlength:"11", class:"form-control form-control-lg", placeholder:"電話番号:例）09012345678" %>
          </div>
          <button class="w-30 btn btn-lg btn-primary" type="submit">新規登録</button>
          <%= link_to "戻る", root_path, class: 'w-30 btn btn-lg btn-success' %>
          <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
  
        <% end %>
    </div>
    <div class="w-25"></div>
    </div>
  </body>
</div>
