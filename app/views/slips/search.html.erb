<h2 class="text-center bg-primary text-white">商品検索</h2>
<div class="container">
  <h3 class="mt-3">＜＜検索項目＞＞</h3>
  <div class="mt-1">
    <%= search_form_for @q, url: search_slips_path, html: {id: "detailed-search-form"} do |f| %>
      <div class="d-flex">
        <div class="search-field">
          <%= f.label :slip_number_cont, '【伝票番号】' %>
          <br>
          <%= f.text_field :slip_number_cont, placeholder: '伝票番号' %>
        </div>
        <div class="search-field ms-3">
          <%= f.label :address_name_cont, '【出荷先】' %>
          <br>
          <%= f.text_field :address_name_cont, placeholder: '出荷先' %>
        </div>
      </div>
      <div class="d-flex mt-2">
        <div class="search-field">
          <%= f.label :shipping_date_gteq, '【出荷日】' %>
          <br>
          <%= f.date_field :shipping_date_gteq, placeholder: '出荷日' %>
          ~
          <%= f.date_field :shipping_date_lteq, placeholder: '出荷日' %>
        </div>
        <div class="search-field ms-3">
          <%= f.label :created_at_gteq, '【作成日】' %>
          <br>
          <%= f.date_field :created_at_gteq, placeholder: '作成日' %>
          ~
          <%= f.date_field :created_at_lteq, placeholder: '作成日' %>
        </div>
      </div>
      <%= f.submit '検索', class: 'btn btn-primary mt-3' %>
    <% end %>
  </div>
  <div class="row">
    <%= slip_lists(@slips) %>
  </div>
  <div class="text-center mt-3">
    <%= link_to "戻る", slips_path, class: 'btn btn-success' %>
  </div>
</div>